{
  "rewrites": [
    { "source": "/studio/(.*)", "destination": "/studio/index.html" },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "buy.home0001.com" }],
      "destination": "/buy/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "dashboard.home0001.com" }],
      "destination": "https://www.home0001.com/dashboard/:path*",
      "permanent": false
    },
    {
      "source": "/echo-park",
      "destination": "/property/echo-park",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/view-template-replies",
      "schedule": "0 0 * * *"
    }
  ]
}
